{% extends 'base.twig' %}

{% block content %}

    <h2>Edit profile</h2>

    <form action="" method="POST">
        <div id="flasherror">{{ flash.error|raw }}</div>

        <label>email:</label>
        <input type="text" name="email" value="{{ user.email|raw }}"> <br />

        <label>Bio:</label>
        <textarea name="bio">{{ user.bio|raw }}</textarea>

        <label>Age:</label>
        <input type="text" name="age" value="{{ user.age|raw }}"> <br />

        <input type="submit" name="submit" value="Save profile">
    </form>

    <form action="" method="POST" enctype="multipart/form-data">
        Please choose a file: <input type="file" name="image"><br>
        <input type="submit" value="Upload File">
    </form>

{% endblock %}
